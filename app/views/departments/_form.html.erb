<div class = 'col-md-8 offset-2'>
    <h1 class = "text-center">Offer Within Our AmaZing Departments!</h1>

    <%= simple_form_for(@department) do |f| %>
        <% if f.object.errors.any? %>
        <ul>
            <% f.object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
        <% end %>
        <%= f.label :name %>
        <%= f.text_field :name %>
 
        <%= f.submit "Submit" %>

    <% end %>
</div>