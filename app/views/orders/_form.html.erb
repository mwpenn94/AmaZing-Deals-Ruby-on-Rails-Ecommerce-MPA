<h2>What stuff do you want?</h2>


<%= form_for(@order) do |f| %>
        <% if f.object.errors.any? %>
        <ul>
            <% f.object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
        <% end %>
        
<h2>Shipping Address</h2>
    <%= f.label "First Name:" %>
    <%= f.text_field :ship_firstname %>
    <%= f.label "Last Name:" %>
    <%= f.text_field :ship_lastname %>
    <br>
    <br>
    <%= f.label "Address 1:" %>
    <%= f.text_field :ship_address1 %>
    <%= f.label "Address 2:" %>
    <%= f.text_field :ship_address2 %>
    <br>
    <br>
    <%= f.label "City:" %>
    <%= f.text_field :ship_city %>
    <%= f.label "State:" %>
    <%= f.text_field :ship_state %>
    <%= f.label "Zip:" %>
    <%= f.text_field :ship_zipcode %>
    <br>
    <br>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>

<h2>Debit or Credit Card</h2>
    <%= f.label "Card Number:" %>
    <%= f.text_field :card_number %>
    <%= f.label "CCV:" %>
    <%= f.text_field :card_verification %>
    <%= f.label "Expiration Date:" %>
    <%= f.month_field :card_expiration_date %>

<h2>Billing Address</h2>
    <%= f.label "First Name:" %>
    <%= f.text_field :bill_firstname %>
    <%= f.label "Last Name:" %>
    <%= f.text_field :bill_lastname %>
    <br>
    <br>
    <%= f.label "Address 1:" %>
    <%= f.text_field :bill_address1 %>
    <%= f.label "Address 2:" %>
    <%= f.text_field :bill_address2 %>
    <br>
    <br>
    <%= f.label "City:" %>
    <%= f.text_field :bill_city %>
    <%= f.label "State:" %>
    <%= f.text_field :bill_state %>
    <%= f.label "Zip:" %>
    <%= f.text_field :bill_zipcode %>
    <br>
    <br>
    <%= f.submit "Submit" %>

<% end %>


