<h1>Have a review?<h1>

<%= form_for(@review) do |f| %>
    <% if f.object.errors.any? %>
    <ul>
        <% f.object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
    <% end %>
    <%= review_customer_id_field(f.object) %>
    <%= review_product_id_field(f.object) %>
    <br>
    <br>
    <%= f.label :rating %>
    <%= f.text_field :rating %>
    <br>
    <br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit "Submit" %>

<% end %>